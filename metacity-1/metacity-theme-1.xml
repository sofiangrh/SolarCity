<?xml version="1.0"?>
<metacity_theme>

<info>
    <name>SolarCity</name>
    <author>ExtraT</author>
    <copyright>ExtraT</copyright>
    <date>June 7, 2004</date>
    <description>SolarCity - a theme with look and feel of Solaris CDE</description>
</info>
    
<!-- Frame geometries -->

<frame_geometry name="normal_geometry">
    <distance name="left_width" value="5"/>
    <distance name="right_width" value="5"/>
    <distance name="bottom_height" value="5"/>
    <distance name="left_titlebar_edge" value="5"/>
    <distance name="right_titlebar_edge" value="5"/>
    <aspect_ratio name="button" value="1.0"/>
    <distance name="title_vertical_pad" value="0"/>
    <border name="title_border" left="0" right="0" top="5" bottom="0"/>
    <border name="button_border" left="0" right="0" top="5" bottom="0"/>
</frame_geometry>

<frame_geometry name="border_geometry" has_title="false">
    <distance name="left_width" value="5"/>
    <distance name="right_width" value="5"/>
    <distance name="bottom_height" value="5"/>
    <distance name="left_titlebar_edge" value="5"/>
    <distance name="right_titlebar_edge" value="5"/>
    <distance name="button_width" value="0"/>
    <distance name="button_height" value="0"/>
    <distance name="title_vertical_pad" value="0"/>
    <border name="title_border" left="0" right="0" top="5" bottom="0"/>
    <border name="button_border" left="0" right="0" top="5" bottom="0"/>
</frame_geometry>


<!-- Colors

<constant name="ColorDark1" value="#57253b"/>
<constant name="ColorDark2" value="#6E7891"/>
<constant name="ColorNormal1" value="#B24D7A"/>
<constant name="ColorNormal2" value="#A8B0C5"/>
<constant name="ColorLight1" value="#DCADC2"/>
<constant name="ColorLight2" value="#E9EBF2"/>
-->

<!-- Blank -->

<draw_ops name="blank">
<!-- zero -->
</draw_ops>

<!-- Buttons -->

<draw_ops name="button_normal_focused">
    <rectangle color="#B24D7A" filled="true" x="0" y="0" width="width" height="height"/>
    <line color="#DCADC2" x1="0" y1="0" x2="0" y2="height" width="1"/>
    <line color="#DCADC2" x1="0" y1="0" x2="width" y2="0" width="1"/>
    <line color="#57253B" x1="width" y1="height-1" x2="1" y2="height-1" width="1"/>
    <line color="#57253B" x1="width-1" y1="height-1" x2="width-1" y2="1" width="1"/>
</draw_ops>

<draw_ops name="button_normal_unfocused">
    <rectangle color="#A8B0C5" filled="true" x="0" y="0" width="width" height="height"/>
    <line color="#E9EBF2" x1="0" y1="0" x2="0" y2="height" width="1"/>
    <line color="#E9EBF2" x1="0" y1="0" x2="width" y2="0" width="1"/>
    <line color="#6E7891" x1="width" y1="height-1" x2="1" y2="height-1" width="1"/>
    <line color="#6E7891" x1="width-1" y1="height-1" x2="width-1" y2="1" width="1"/>
</draw_ops>

<draw_ops name="button_pressed_focused">
