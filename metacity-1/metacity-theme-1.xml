</draw_ops>    

<draw_ops name="maximize_button_pressed">
    <include name="button_pressed_focused"/>
    <include name="maximize_button_focused"/>
</draw_ops>    

<draw_ops name="menu_button_focused">
    <include name="button_normal_focused"/>
    <icon alpha="1.0" x="2" y="height/2 - width/2 + 2" width="width-5" height="width-5"/>
</draw_ops>

<draw_ops name="menu_button_unfocused">
    <include name="button_normal_unfocused"/>
    <icon alpha="1.0" x="2" y="height/2 - width/2 + 2" width="width-5" height="width-5"/>
</draw_ops>



