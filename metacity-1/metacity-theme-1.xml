    <line color="#57253B" x1="0" y1="0" x2="0" y2="height" width="1"/>
    <line color="#57253B" x1="0" y1="0" x2="width" y2="0" width="1"/>
    <line color="#DCADC2" x1="width" y1="height-1" x2="1" y2="height-1" width="1"/>
    <line color="#DCADC2" x1="width-1" y1="height-1" x2="width-1" y2="1" width="1"/>
</draw_ops>

<draw_ops name="close_button_focused">
    <line color="#DCADC2" x1="width/5" y1="height*2/5" x2="width/5" y2="height-height*2/5" width="1"/>
    <line color="#DCADC2" x1="width/5" y1="height*2/5" x2="width-(width/5)" y2="height*2/5" width="1"/>
    <line color="#57253B" x1="width-(width/5)" y1="height-(height*2/5)-1" x2="(width/5)+1" y2="height-(height*2/5)-1" width="1"/>
    <line color="#57253B" x1="width-(width/5)-1" y1="height-(height*2/5)" x2="width-(width/5)-1" y2="height*2/5+1" width="1"/>        
</draw_ops>
<draw_ops name="close_button_unfocused">
    <line color="#E9EBF2" x1="width/5" y1="height*2/5" x2="width/5" y2="height-height*2/5" width="1"/>
    <line color="#E9EBF2" x1="width/5" y1="height*2/5" x2="width-(width/5)" y2="height*2/5" width="1"/>
    <line color="#6E7891" x1="width-(width/5)" y1="height-(height*2/5)-1" x2="(width/5)+1" y2="height-(height*2/5)-1" width="1"/>
    <line color="#6E7891" x1="width-(width/5)-1" y1="height-(height*2/5)" x2="width-(width/5)-1" y2="height*2/5+1" width="1"/>        
</draw_ops>

<draw_ops name="minimize_button_focused">
    <line color="#DCADC2" x1="width*2/5" y1="height*2/5" x2="width*2/5" y2="height-height*2/5" width="1"/>
    <line color="#DCADC2" x1="width*2/5" y1="height*2/5" x2="width-(width*2/5)" y2="height*2/5" width="1"/>
    <line color="#57253B" x1="width-(width*2/5)" y1="height-(height*2/5)-1" x2="(width*2/5)+1" y2="height-(height*2/5)-1" width="1"/>
    <line color="#57253B" x1="width-(width*2/5)-1" y1="height-(height*2/5)" x2="width-(width*2/5)-1" y2="height*2/5+1" width="1"/>        
</draw_ops>
<draw_ops name="minimize_button_unfocused">
    <line color="#E9EBF2" x1="width*2/5" y1="height*2/5" x2="width*2/5" y2="height-height*2/5" width="1"/>
    <line color="#E9EBF2" x1="width*2/5" y1="height*2/5" x2="width-(width*2/5)" y2="height*2/5" width="1"/>
    <line color="#6E7891" x1="width-(width*2/5)" y1="height-(height*2/5)-1" x2="(width*2/5)+1" y2="height-(height*2/5)-1" width="1"/>
    <line color="#6E7891" x1="width-(width*2/5)-1" y1="height-(height*2/5)" x2="width-(width*2/5)-1" y2="height*2/5+1" width="1"/>        
</draw_ops>

<draw_ops name="maximize_button_focused">
    <line color="#DCADC2" x1="width/5" y1="height/5" x2="width/5" y2="height-height/5" width="1"/>
    <line color="#DCADC2" x1="width/5" y1="height/5" x2="width-(width/5)" y2="height/5" width="1"/>
    <line color="#57253B" x1="width-(width/5)" y1="height-(height/5)-1" x2="(width/5)+1" y2="height-(height/5)-1" width="1"/>
    <line color="#57253B" x1="width-(width/5)-1" y1="height-(height/5)" x2="width-(width/5)-1" y2="height/5+1" width="1"/>        
</draw_ops>

<draw_ops name="maximize_button_unfocused">
    <line color="#E9EBF2" x1="width/5" y1="height/5" x2="width/5" y2="height-height/5" width="1"/>
    <line color="#E9EBF2" x1="width/5" y1="height/5" x2="width-(width/5)" y2="height/5" width="1"/>
    <line color="#6E7891" x1="width-(width/5)" y1="height-(height/5)-1" x2="(width/5)+1" y2="height-(height/5)-1" width="1"/>
    <line color="#6E7891" x1="width-(width/5)-1" y1="height-(height/5)" x2="width-(width/5)-1" y2="height/5+1" width="1"/>        
</draw_ops>

<draw_ops name="close_button_normal_focused">
    <include name="button_normal_focused"/>
    <include name="close_button_focused"/>
</draw_ops>    

<draw_ops name="close_button_normal_unfocused">
    <include name="button_normal_unfocused"/>
    <include name="close_button_unfocused"/>
</draw_ops>    

<draw_ops name="close_button_pressed">
    <include name="button_pressed_focused"/>
    <include name="close_button_focused"/>
</draw_ops>    

<draw_ops name="minimize_button_normal_focused">
    <include name="button_normal_focused"/>
    <include name="minimize_button_focused"/>
</draw_ops>    

<draw_ops name="minimize_button_normal_unfocused">
    <include name="button_normal_unfocused"/>
    <include name="minimize_button_unfocused"/>
</draw_ops>    

<draw_ops name="minimize_button_pressed">
    <include name="button_pressed_focused"/>
    <include name="minimize_button_focused"/>
</draw_ops>    

<draw_ops name="maximize_button_normal_focused">
    <include name="button_normal_focused"/>
    <include name="maximize_button_focused"/>
</draw_ops>    

<draw_ops name="maximize_button_normal_unfocused">
    <include name="button_normal_unfocused"/>
