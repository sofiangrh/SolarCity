<!-- Titles etc. -->

<draw_ops name="title_focused">
    <include name="button_normal_focused"/>
    <title color="#FFFFFF" x="(width-title_width)/2" y="(height-title_height)/2"/>
</draw_ops>

<draw_ops name="title_unfocused">
    <include name="button_normal_unfocused"/>
    <title color="#000000" x="(width-title_width)/2" y="(height-title_height)/2"/>
</draw_ops>


<!-- Frame styles -->

<frame_style name="normal_focused_resized" geometry="normal_geometry">
    <piece position="title" draw_ops="title_focused"/>
    
    <piece position="top_titlebar_edge" draw_ops="top_edge_focused_resized"/>
    <piece position="bottom_edge" draw_ops="bottom_edge_focused_resized"/>
    <piece position="left_edge" draw_ops="left_edge_focused_resized"/>
    <piece position="left_titlebar_edge" draw_ops="left_titlebar_edge_focused_resized"/>
    <piece position="right_edge" draw_ops="right_edge_focused_resized"/>
    <piece position="right_titlebar_edge" draw_ops="right_titlebar_edge_focused_resized"/>

    <button function="close" state="normal" draw_ops="close_button_normal_focused"/>
